<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bathem.vocabpower">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application.AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".CustomProvider.VocabSearchSuggestionProvider"
            android:authorities="com.bathem.vocabpower.CustomProvider.VocabSearchSuggestionProvider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Activity.VocabListActivity"
            android:label="@string/title_activity_vocab_list"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Activity.AddVocabActivity" />
        <activity android:name=".Activity.SettingsActivity" />
        <activity android:name=".Activity.FavouriteActivity"></activity>
    </application>

</manifest>